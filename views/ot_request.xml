<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ot_registration_tree" model="ir.ui.view">
        <field name="name">ot.registration.tree</field>
        <field name="model">ot.registration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id"/>
                <field name="employee_id"/>
                <field name="manager_id"/>
                <field name="additional_hours"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ot_registration_form" model="ir.ui.view">
        <field name="ot.registration.form"></field>
        <field name="model">ot.registration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="draft_request" type="object" string="Reset to Draft" class="oe_highlight" attrs="{'invisible': [('state','!=','refused')]}" confirm="Set OT request to Draft?" groups="ot_management.group_ot_management_employee"/>
                    <button name="action_submit" string="Submit" states="draft" type="object" icon="fa-reply text-warning" groups="ot_management.group_ot_management_employee"/>
                    <button name="button_pm_approve" string="PM Approve" type="object" states="to_approve" icon="fa-reply text-warning" groups="ot_management.group_ot_management_pm"/>
                    <button name="button_dl_approve" string="DL Approve" type="object" states="approved" icon="fa-reply text-warning" groups="ot_management.group_ot_management_dl"/>
                    <button name="refuse_request" type="object" string="Refuse" class="oe_highlight" attrs="{'invisible':['|',('state', '=', 'draft'), ('state', '=', 'done')]}" confirm="Are you sure to Refuse the OT request?"/>
                    <button name="refuse_request" type="object" string="HR Refuse" class="oe_highlight" confirm="Are you sure to Refuse the OT request?" invisible="1"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <group>
                        <field name="project_id"/>
                        <field name="manager_id"/>
                        <field name="ot_month"/>
                    </group>
                    <group>
                        <field name="employee_id"/>
                        <field name="company_id"/>
                        <field name="dl_id"/>
                        <field name="create_date" string="Create Date"/>
                        <field name="additional_hours"/>
                    </group>
                </group>
                <notebook>
                    <page string="Request Line">
                        <field name="ot_registration_lines">
                            <tree editable="bottom" decoration-danger="state=='draft'">
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="category"/>
                                <field name="is_wfh"/>
                                <field name="additional_hours"/>
                                <field name="job_taken"/>
                                <field name="state"/>
                                <field name="is_late_approved"/>
                                <field name="hr_notes"/>
                                <field name="attendance_notes"/>
                                <field name="notes"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <group string="HR Notes">
<!--		            <field name="hr_notes" nolabel="1" readonly="1"/>-->
	            </group>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
<!--                    <field name="activity_ids" widget="mail_activity"/>-->
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ot_registration_search" model="ir.ui.view">
        <field name="name">ot.registration.search</field>
        <field name="model">ot.registration</field>
        <field name="arch" type="xml">
            <search>
                <filter string="State: To PM Approve" name="to_pm_approve" domain="[('state', '=', 'to_approve')]"/>
                <filter string="State: To DL Approve" name="to_dl_approve" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <filter string="State: DL Approved" name="dl_approved" domain="[('state', '=', 'done')]"/>
                <group>
                    <filter string="Project" name="project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>

    </record>

    <record id="action_ot_request" model="ir.actions.act_window">
        <field name="name">OT Registration</field>
        <field name="res_model">ot.registration</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>
</odoo>